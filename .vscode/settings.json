{
    "code-runner.executorMap": {
        "typescript": "cd $workspaceRoot && npx playwright test $relativeFile --headed"
    },
    "code-runner.runInTerminal": true,
    "code-runner.clearPreviousOutput": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.fileDirectoryAsCwd": false,
    "code-runner.ignoreSelection": true,
    "code-runner.customCommand": "cd $workspaceRoot && npx playwright test $relativeFile --headed",
    "[typescript]": {
        // Set to null because Prettier extension (esbenp.prettier-vscode) is not installed
        // To enable formatting: Install "Prettier - Code formatter" extension, then change this to "esbenp.prettier-vscode"
        "editor.defaultFormatter": null
    },
    "workbench.sideBar.location": "left"
}

