{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Playwright: Run Current Test",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "playwright",
                "test",
                "${relativeFile}",
                "--headed"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Playwright: Run All Tests",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "playwright",
                "test",
                "--headed"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Playwright: Run Current Test (UI Mode)",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "playwright",
                "test",
                "${relativeFile}",
                "--ui"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Playwright: Debug Current Test",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "playwright",
                "test",
                "${relativeFile}",
                "--debug"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ]
}
